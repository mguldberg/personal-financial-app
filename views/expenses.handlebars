<style>
    body {
        background: rgb(219, 241, 247);
    }

    .card {
        padding: 10px;
        border: solid black 1px;
        margin-top:0px;
        margin-bottom:20px;
    }

    h1 {
        text-align: center;
        color: black;
        background-color: rgb(219, 241, 247);
    }

    * {
        position: relative;
        box-sizing: border-box;
    }

    body {
        font-family:Arial,'san-serif';
    }
    .jumbotron{
        background: rgb(219, 241, 247);
        margin-bottom:0px;
       margin-top:0px;
       padding: 0.5em 0.6em;
    }
    

    input:hover {
        background: rgb(177, 221, 233);
    }
</style>
<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Personal Expenses</h1>
        <h3 class="testing"id="first-name"></h3>
        <hr class="my-4">
    </div>
    <div class="row">
        <div class="col-md-4 card">
            <form class="expenses">
                Item:
                <br>
                <input type="text" id="item" name="item" placeholder="ham">
                <br> Amount($):
                <br>
                <input type="number" min="0" name="amount" id="amount" placeholder="10">
                <br> Category:
                <br>
                <input type="radio" name="category" id="food" value="Food" checked>
                <label class="form-check-label" for="food">Food</label>
                <br>
                <input type="radio" name="category" id="entertainment" value="Entertainment">
                <label class="form-check-label" for="entertainment">Entertainment</label>
                <br>
                <input type="radio" name="category" id="housing" value="Housing">
                <label class="form-check-label" for="housing">Housing</label>
                <br>
                <input type="radio" name="category" id="automobile" value="Automobile">
                <label class="form-check-label" for="automobile">Automobile</label>
                <br>
                <input type="radio" name="category" value="Other">
                <label class="form-check-label" for="other">Other</label>
                <br> Date Purchased (optional):
                <br>
                <input type="date" name="date" id="date" placeholder="Today">
                <br>
                <br>
                <input type="submit" class="btn btn-primary btn-lg" value="Submit">
            </form>
        </div>
        <div class="col-md-8">
            <div class="card" id="container" style="min-width: 310px; max-width: 600px; height: 400px; margin: 0 auto"></div>
            <!-- Data from www.netmarketshare.com. Select Browsers => Desktop share by version. Download as tsv. -->
            <pre id="tsv" style="display:none">
                </pre>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button data-toggle="collapse" class="btn btn-primary" data-target="#demo">Display Table</button>
            <div id="demo" class="collapse">
               <div class="card food-card">
                   <h2 class="card-title">Food</h2>
                    </div>
               <div class="card entertainment-card">
                   <h2 class="card-title">Entertainment</h2>
                   </div>
               <div class="card housing-card">
                   <h2 class="card-title">Housing</h2>
                   </div>
               <div class="card automobile-card">
                   <h2 class="card-title">Automobile</h2>
                   </div>
               <div class="card other-card">
                   <h2 class="card-title">Other</h2>
                   </div>
            </div>
        </div>
    </div>
</div>
   <div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="error-text"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="js/expenses.js"></script>